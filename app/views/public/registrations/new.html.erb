<h2>新規会員登録</h2>

<%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<table>
  <tbody>
  <tr>
   <th><%= f.label :last_name, "名前" %></th>
    <td>
      <%= f.label :last_name, "(姓)" %>
      <%= f.text_field :last_name %>
    </td>
    <td>
    <%= f.label :first_name, "(名)" %>
    <%= f.text_field :first_name %>
    </td>
  </tr>

  <tr>
    <th><%= f.label :last_name_kana, "フリガナ" %></th>
    <td>
      <%= f.label :last_name, "(セイ)" %>
      <%= f.text_field :last_name_kana %>
     </td>
    <td>
    <%= f.label :first_name_kana, "(メイ)" %>
    <%= f.text_field :first_name_kana%>
    </td>
  </tr>

  <tr>
    <th><%= f.label :email, "メールアドレス" %></th>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %> </td>
  </tr>

  <tr>
   <th> <%= f.label :postal_code, "郵便番号(ハイフンなし)" %></th>
    <td><%= f.text_field :postal_code %> </td>
  </tr>

  <tr>
    <th><%= f.label :address, "住所" %></th>
    <td><%= f.text_field :address %> </td>
  </tr>

  <tr>
    <th><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></th>
    <td><%= f.text_field :telephone_number %> </td>
  </tr>

  <tr>
    <th><%= f.label :password, "パスワード(6文字以上)" %></th>
    <td>
    <%= f.password_field :password, autocomplete: "new-password" %>
    </td>
  </tr>

  <tr>
    <th><%= f.label :password_confirmation, "パスワード(確認用)" %></th>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %> </td>
  </tr>

  </tr>
    <th></th>
    <td><%= f.submit "新規登録" ,class:"btn btn-success" %></td>
  </tr>
  </tbody>
 </table>
<% end %>

<h3>既に登録済みの方</h3>
<p>
<%= render "public/shared/links" %>からログインしてください。
</p>
