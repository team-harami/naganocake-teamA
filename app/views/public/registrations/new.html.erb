<div class="form-row mb-4">
  <div class="col-1"></div>
<h5 class="form-group col-3 pl-5">
  新規会員登録
</h5>
</div>

<%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<div class="form-row">
   <div class="col-1"></div>
    <table>
      <tbody>
        <tr>
          <td class="p-1">名前</td>
          <td class="p-1"><%= f.label :last_name, "(姓)" %></td>
          <td class="p-1"><%= f.text_field :last_name, autofocus: true%></td>
          <td class="pl-4"><%= f.label :first_name, "(名)" %></td>
          <td class="p-1"><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <td class="p-1">フリガナ</td>
          <td class="p-1"><%= f.label :last_name_kana, "(セイ)" %></td>
          <td class="p-1"><%= f.text_field :last_name_kana %></td>
          <td class="pl-4"><%= f.label :first_name_kana, "(メイ)" %></td>
          <td class="p-1"><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <td class="p-1"><%= f.label :email, "メールアドレス" %></td>
          <td></td>
          <td class="p-1"><%= f.email_field :email, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td class="p-1"><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
          <td></td>
          <td class="p-1"><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td class="p-1"><%= f.label :address, "住所" %></td>
          <td></td>
          <td class="p-1" colspan="3"><%= f.text_field :address, size: "55" %></td>
        </tr>
        <tr>
          <td class="p-1"><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></td>
          <td></td>
          <td class="p-1"><%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
          <td class="p-1">
            <%= f.label :password, "パスワード(６文字以上)" %>
            <% if @minimum_password_length %>
            <em><% @minimum_password_length %></em>
            <% end %>
          </td>
          <td></td>
          <td class="p-1"><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td class="p-1"><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
          <td></td>
          <td class="p-1"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td class="p-2"><%= f.submit "新規登録", class:"btn btn-success" %></td>
        </tr>
        </tr>
      </tbody>
    </table>
</div>

<% end %>

<div class="form-row mt-3 ml-2">
  <div class="col-1"></div>
<h5>既に登録済みの方</h5>
</div>

<div class="form-row d-flex align-items-end ml-5">
  <div class="col-1"></div>
<span class="mr-2"><%= render "public/shared/links" %></span>からログインしてください。
</div>
</div>



