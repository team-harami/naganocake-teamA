<div class="container">
  <div class="row">
     <div class="col-md mx-auto">
<h5>新規会員登録</h5>

<%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<table>
  <tbody>
  <tr>
    <td><%= f.label :last_name, "名前" %></td>
    <td class="p-2">
    <%= f.label :last_name, "(姓)" %><br/>
    <%= f.text_field :last_name %>
    </td>
    <td class="p-2">
    <%= f.label :first_name, "(名)" %><br/>
    <%= f.text_field :first_name %>
    </td>
  </tr>

  <tr>
    <td><%= f.label :last_name_kana, "フリガナ" %></td>
    <td class="p-2">
      <%= f.label :last_name, "(セイ)" %><br/>
      <%= f.text_field :last_name_kana %>
     </td>
    <td class="p-2">
    <%= f.label :first_name_kana, "(メイ)" %><br/>
    <%= f.text_field :first_name_kana%>
    </td>
  </tr>

  <tr>
    <td><%= f.label :email, "メールアドレス" %></td>
    <td class="p-2"><%= f.email_field :email, autofocus: true, autocomplete: "email" %> </td>
  </tr>

  <tr>
   <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
    <td class="p-2"><%= f.text_field :postal_code %> </td>
  </tr>

  <tr>
    <td><%= f.label :address, "住所" %></td>
    <td class="p-2"><%= f.text_field :address %> </td>
  </tr>

  <tr>
    <td><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></td>
    <td class="p-2"><%= f.text_field :telephone_number %> </td>
  </tr>

  <tr>
    <td><%= f.label :password, "パスワード(6文字以上)" %></td>
    <td class="p-2">
    <%= f.password_field :password, autocomplete: "new-password" %>
    </td>
  </tr>

  <tr>
    <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
    <td class="p-2"><%= f.password_field :password_confirmation, autocomplete: "new-password" %> </td>
  </tr>

  </tr>
    <td></td>
    <td class="p-2"><%= f.submit "新規登録" ,class:"btn btn-success" %></td>
  </tr>
  </tbody>
 </table>
<% end %>

<h5>既に登録済みの方</h5>
<p class="d-flex align-items-end">
<span class="mr-2"><%= render "public/shared/links" %></span>からログインしてください。
</p>
</div>
</div>
</div>



