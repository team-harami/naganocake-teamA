<div class="container d-flex-column space-around text-center">
    <div class="row my-4" >
        
           <h4 class="col-md-4">ショッピングカート</h4>
        <div class="col-2 offset-md-6">
            <%= button_to "カートを空にする", destroy_cart_path, method: :delete, class: "btn btn-danger", data: { confirm: "本当に空にしますか？" } %>
        </div>
    </div>
    <% if @cart_items.blank? %>
        <h3>カートは空です。</h3>
    <% else %>
        <div class="teble-responsive">
        <table class = "table table-bordered b">
        <thead>
            <tr class="table-secondary">
                <th>商品名</th>
                <th>単価(税込)</th>
                <th>数量</th>
                <th>小計</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    
            <% @cart_items.each do |cart_item| %>
   
   
                <tr>
                    <td class = "align-middle">
                        <%=image_tag cart_item.item.get_item_image(100,100) %>
                        <%= cart_item.item.name %>
                    </td>
                    <td class="align-middle">
                        <%= cart_item.item.with_tax_price.to_s(:delimited)%>円
                    </td>
                    <td class="align-middle">
                        <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
                            <%= f.hidden_field :customer_id, value: current_customer.id %>
                            <%= f.hidden_field :item_id, value:  cart_item.item.id %>
                            <%= f.select :amount, *[1..30] %>
                            <%= f.submit "変更" %>
                         <% end %>
                    </td>
                    <td class="align-middle">
                        <%= cart_item.subtotal.to_s(:delimited)%>
                    </td>
                    <td class = "align-middle"><%= button_to "削除", cart_item_path(cart_item), method: :delete, class: "btn btn-danger", data: { confirm: "本当に空にしますか？" }  %></td>
                    <% @total_price += cart_item.subtotal %>
                </tr>
            <% end %>
        </tbody>
    </table>
        </div>
<% end %>
    
    <div class="row align-items-end">
        <div class="col-3">    
            <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
        </div>
        <div class="col-3 offset-md-6">
            <ul class="list-group list-group-horizontal">
              <li class="list-group-item list-group-item-info">合計金額</li>
              <li class="list-group-item"><%= @total_price.to_s(:delimited )%></li>
            </ul>
        </div>
    </div>
    <div class ="row mt-5 align justify-content-center">
        <div class="3>">
            <%= link_to "情報入力に進む", new_order_path, class: "btn-lg btn-success", style: "background-color: #008000; color: #FFFFFF;" %>
        </div>
    </div>
        
    
    
</div>