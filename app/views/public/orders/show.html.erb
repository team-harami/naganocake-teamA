<h3>注文履歴詳細</h3>

<p>注文情報</p>
<table border="3">
  <tbody>
    <tr>
      <th bgcolor="#DDDDDD">注文日</th>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <th bgcolor="#DDDDDD">配送先</th>
      <td>〒<%= @order.postal_code %></td>
      <td><%= @order.address %></td>
      <td><%= @order.name %></td>
    </tr>
    <tr>
      <th bgcolor="#DDDDDD">支払方法</th>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
      <th bgcolor="#DDDDDD">ステータス</th>
      <td><%= @order.status %></td>
    </tr>
  </tbody>
</table>

<p>請求情報</p>
<table border="3">
  <tbody>
    <tr>
      <th bgcolor="#DDDDDD">商品合計</th>
      <td><%= @order.total_payment - 800 %></td>
    </tr>
    <tr>
      <th bgcolor="#DDDDDD">配送料</th>
      <td>800</td>
    </tr>
    <tr>
      <th bgcolor="#DDDDDD">ご請求額</th>
      <td><%= @order.total_payment %></td>
    </tr>
  </tbody>
</table>

<p>注文内容</p>
<table border="3">
  <thead>
    <tr bgcolor="#DDDDDD">
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @details.each do |detail| %>
    <tr>
      <td><%= detail.item.name %></td>
      <td><%= detail.tax_price %></td>
      <td><%= detail.amount %></td>
      <td><%= detail.tax_price*detail.amount %></td>
    </tr>
    <% end %>
  </tbody>
</table>