<div class="container p-3">
  <div class="row">
    <div class="col-md-6 my-3">
      <div class="text-dark mb-3">
        <h4>
          <span class="bg-secondary text-white py-2 px-3">注文履歴詳細</span>
        </h4>
      </div>
    </div>
  </div>
  <!--<h4>-->
  <!--  <span class="bg-secondary text-white py-2 px-3">注文履歴詳細</span>-->
  <!--</h4>-->
  <div class="row">
    <div class="col-md-6 d-flex flex-column justify-content-start">
      <h7 class="font-weight-bold">注文情報</h7>
      <table border="3" class="mb-3">
        <tbody>
          <tr>
            <th class="table-secondary" width="100" height="40">注文日</th>
            <td class="bg-white text-dark"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th class="table-secondary">配送先</th>
            <td class="bg-white text-dark">
              〒<%= @order.postal_code %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th class="table-secondary" height="40">支払方法</th>
            <td class="bg-white text-dark"><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th class="table-secondary" height="40">ステータス</th>
            <td class="bg-white text-dark"><%= @order.status %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-6 d-flex flex-column justify-content-start">
      <h7 class="font-weight-bold">請求情報</h7>
      <table border="3" width="300" height="140">
        <tbody>
          <tr>
            <th bgcolor="#DDDDDD" width="150">商品合計</th>
            <td class="bg-white text-dark"><%= @order.total_payment - 800 %></td>
          </tr>
          <tr>
            <th bgcolor="#DDDDDD">配送料</th>
            <td class="bg-white text-dark">800</td>
          </tr>
          <tr>
            <th bgcolor="#DDDDDD">ご請求額</th>
            <td class="bg-white text-dark"><%= @order.total_payment %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9 d-flex flex-column justify-content-start">
      <h7 class="font-weight-bold">注文内容</h7>
      <table border="3">
        <thead>
          <tr bgcolor="#DDDDDD">
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @details.each do |detail| %>
          <tr class="bg-white text-dark">
            <td><%= detail.item.name %></td>
            <td><%= detail.tax_price %></td>
            <td><%= detail.amount %></td>
            <td><%= detail.tax_price*detail.amount %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>



