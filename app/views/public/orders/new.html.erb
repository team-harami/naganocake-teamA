<div class="container p-3">
  <div class="row">
    <div class="col-md-12">
      
        <h3>
          <span class="bg-secondary text-white py-2 px-3">注文情報入力</span>
        </h3>
          <strong>支払方法</strong>
        <%= form_with model: @order, url: confirm_orders_path do |f| %>
          <%= f.radio_button :payment_method, Order.payment_methods.key(0), checked: true %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %><br>
          <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %><br>

          
        <strong>お届け先</strong><br>
          <%= f.radio_button :address_option, 0, checked: true %>
          <%= f.label :address, 'ご自身の住所' %><br>
          〒<%= @customer.postal_code %> <%= @customer.address %><br>
          <%= @customer.last_name %><%= @customer.first_name %><br>
        
          <%= f.radio_button :address_option, 1 %>
          <%= f.label :address, '登録済住所から選択' %><br>
          <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :set_address) %><br>
        
          <%= f.radio_button :address_option, 2 %>
          <%= f.label :address, '新しいお届け先' %>
          <form></form>
          <table>
            <tr>
              <td><%= f.label :postal_code, '郵便番号(ハイフンなし)' %></td>
              <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
              <td><%= f.label :address, '住所' %></td>
              <td><%= f.text_field :address %></td>
            </tr>
            <tr>
              <td><%= f.label :name, '宛名' %></td>
              <td><%= f.text_field :name %></td>
            </tr>
          </table>
    </div>
  </div>
  <!--<div class="row pt-30">-->
    <div class="d-flex justify-content-center align-items-center my-container">

        <%= f.submit '確認画面へ進む', class:"btn btn-primary" %>
      <% end %>
    </div>
  <!--</div>-->
</div>
