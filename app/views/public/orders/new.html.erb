<h3>注文情報入力</h3>

<strong>支払方法</strong>
<%= form_with model: @payment do |f| %>
  <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
  <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
<% end %>
  
  
<strong>お届け先</strong>
<%= form_with model: @address do |f| %>
  <%= f.radio_button :address, :customer.address %>
  <%= f.label :address, 'ご自身の住所' %>
  <%= f.radio_button :address, :customer_id.addresses.id %>
  <%= f.label :address, '登録済住所から選択' %>
  <%= f.select :address, options_for_select(customer_id.addresses.id) %>
<% end %>

<%= form_with model @address do |f| %>
  <%= f.label :postal_code, '郵便番号(ハイフンなし)' %>
  <%= f.text_field :postal_code %><br>
  <%= f.label :address, '住所' %>
  <%= f.text_field :address %><br>
  <%= f.label :name, '宛名' %>
  <%= f.text_field :name %>
<% end %>
  


