<div>
  <h3 class="text-dark bg-secondary">注文履歴一覧</h3>
</div>



<table border="3">
  <thead>
    <tr bgcolor="#DDDDDD">
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= order.address %></td>
      <td>
        <% order.order_details.each do |order_detail| %>
          <%= order_detail.item.name %><br>
        <% end %>
      </td>
      <td><%= order.total_payment %></td>
      <td><%= order.status %></td>
      <td><%= link_to '表示する', order_path(order.id), class:"btn btn-primary btn-sm" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

