<div class = "container w-md-100">
    <div class = "row">
        <div class = "col-2">
            <%= render '/public/items/search_genre.html.erb' %>
        </div>
        <div class ="col-4 lm-1">
            <%= image_tag @item.get_item_image(300,255) %>
        </div>
        <div class="col-5 p-2">
            <h4><%= @item.name %></h4>
            </br>
            <p class ="text-wrap"><%= @item.introduction %></p>
            <p>
                ￥<%= @item.with_tax_price.to_s(:delimited)%> 
                (税込)
            </p>
            <% if customer_signed_in? %>
                <!--カートに入れる機能を後で追加form_with-->
                <%= form_with model: @cart_item, url:cart_items_path do |f|%>
                 <%= f.hidden_field :customer_id, value: current_customer.id %>
                    <%= f.hidden_field :item_id, value: @item.id %>
                    <%= f.select :amount, *[1..30], include_blank: "個数選択" %>
                    <%= f.submit "カートに入れる" %>
                <% end %>
            <% end %>
        </div>
    </div>
</div>
        