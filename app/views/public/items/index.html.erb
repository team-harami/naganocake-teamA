<div class="container d-flex w-md-100">
    <div class ="col-2">
        <!--ジャンル検索-->
            <%= render '/public/items/search_genre.html.erb' %>
    </div>
    <div class= "col-9">
        <div class ="row">
            <h4>商品一覧</h4>
            （全<%=@items.count%>件）　
        </div>
        <div class="row">
            <div class="card-deck py-5 text-center">
                <% @items.each do |item| %>
                <div class="col-12 col-md-6 col-lg-3 text-card-container">
                    <div class = "card border-0" style="width: 15rem; background-color: #ffde59;">
                        <div class="card-image-top mx-auto">
                            <%= link_to item_path(item.id) do %>
                                <%= image_tag item.get_item_image(150,96), class: "card-img-top"; %>
                            <% end %>
                        </div>
                        <div class="card-body">
                                <div class ="card-title">
                                    <%= link_to item.name, item_path(item.id), :style => "color: black;"%>
                                </div>
                                <div class ="card-text">
                                    <%= item.with_tax_price.floor.to_s(:delimited) %>円
                                </div>
                        </div>
                    </div>
                </div>
                <% end %>
            </div>
                <!--ページネーション-->
                <%= paginate @items %>
            </div>
        </div>
    </div>
</div>
    
    