<h3>配送先登録 / 一覧</h3>

<%= form_with model: @address, method: :post, url: addresses_path do |f| %>
  <%= f.label :postal_code, '郵便番号(ハイフンなし)' %>
  <%= f.text_field :postal_code, placeholder:"0000000" %><br>
  <%= f.label :address, '住所' %>
  <%= f.text_field :address, size: 60, placeholder:"東京都渋谷区代々木神園町0-0" %><br>
  <%= f.label :name, '宛名' %>
  <%= f.text_field :name, placeholder:"令和道子" %>
  <%= f.submit '新規登録', class:"btn btn-success btn-sm" %>
<% end %>

