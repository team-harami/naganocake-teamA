<h3>配送先編集</h3>

<%= form_with model: @address, method: :patch do |f| %>
  <%= f.label :postal_code, '郵便番号(ハイフンなし)' %>
  <%= f.text_field :postal_code %><br>
  <%= f.label :address, '住所' %>
  <%= f.text_field :address, size: 60 %><br>
  <%= f.label :name, '宛名' %>
  <%= f.text_field :name %>
  <%= f.submit '変更内容を保存', class:"btn btn-success btn-sm" %>