<h2>会員情報編集</h2>

<%= form_with model: @customer, url: information_customers_path , method: :patch do |f| %>
<div>
    <%= f.label :last_name, "名前" %>
    <%= f.label :last_name, "(姓)" %>
    <%= f.text_field :last_name %>
    <%= f.label :first_name, "(名)" %>
    <%= f.text_field :first_name %>
</div>
<div>
    <%= f.label :last_name_kana, "フリガナ" %>
    <%= f.label :last_name, "(セイ)" %>
    <%= f.text_field :last_name_kana %>
    <%= f.label :first_name_kana, "(メイ)" %>
    <%= f.text_field :first_name_kana%>
</div>
<div>
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code %>
</div>
<div>
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %>
</div>
<div>
    <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
    <%= f.text_field :telephone_number %>
</div>
<div>
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>
<div>
    <%= f.submit "編集内容を保存", class: "btn btn-success" %>

</div>
<% end %>

<%= link_to unsubscribe_customers_path, class: "btn btn-danger" do %>
退会する
<% end %>