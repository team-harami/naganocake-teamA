
<div class="form-row my-4">
<div class="col-1"></div>
<h5>マイページ</h5>
</div>

<div class="form-row ml-5">
<h5 class="col-1 d-flex align-items-end"><strong>登録情報</strong></h5>
<div class="col-2">
<%= link_to information_edit_customers_path, class: "btn btn-success col-6" do %>
 編集する
<% end %>
</div>
</div>

<div class="form-row  ml-5 mt-3">
  <div class="col-8">
<table class="table table-bordered">
  <tbody class="thead-light">
    <tr>
      <th>氏名</th>
      <td><%= "#{@customer.last_name} #{@customer.first_name}" %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%= "#{@customer.last_name_kana} #{@customer.first_name_kana}" %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
  </tbody>
</table>
</div>
</div>

<div class="form-row  ml-5 my-4">
<h5 class="col-1 d-flex align-items-end"><strong>配送先</strong></h5>
<div class="col-2">
<%= link_to root_path, class: "btn btn-primary col-8" do %>
 一覧を見る
<% end %>
</div>
</div>

<!--パスは仮-->

<div class="form-row  ml-5 my-4">
<h5 class="col-1 d-flex align-items-end"><strong>注文履歴</strong></h5>
<div class="col-2">
<%= link_to root_path, class: "btn btn-primary col-8" do %>
 一覧を見る
<% end %>
</div>
</div>


