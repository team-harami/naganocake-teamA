<div class="container">
    <div class="d-flex" >
        <h5 class="col-md-4">商品一覧</h5>
        <div class="col-2">
            <%= link_to "商品を追加", new_admin_item_path, class:"btn" %> 
        </div>
    </div>
    <table class = "table">
        <thead>
            <tr>
                <th>商品ID</th>
                <th>商品名</th>
                <th>税抜き価格</th>
                <th>ジャンル</th>
                <th>ステータス</th>
            </tr>
        </thead>
        <tbody>
            <% @items.each do |item| %>
            <tr>
                <td><%= item.id %></td>
                <td><%=link_to " #{item.name}", admin_item_path(item.id) %></td>
                <td><%= item.price %></td>
                <td><%= item.genre.name %></td>
                <td>
                    <% if item.is_active %>
                        販売中
                    <% else %>
                       販売停止中
                    <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>