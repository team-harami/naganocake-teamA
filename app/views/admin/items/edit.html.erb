<h4>商品編集</h4>
<%= form_with model: @item, url:admin_item_path, method: :patch do |f| %>
<h5>商品画像</h5>
<%= f.file_field :item_image, accept: "image/*" %>

<h5>商品名</h5>
<%= f.text_field :name %>
<h5>商品説明</h5>
<%= f.text_area :introduction %>


<!--ジャンルのフォームはまだ非搭載-->
<h5>ジャンル</h5>

<h5>税抜き価格</h5>
<%= f.number_field :price %>円

<h5>販売ステータス</h5>
<%= f.radio_button :is_active, :true %>
<%= f.label :is_active_true, "販売中" %>
<%= f.radio_button :is_active, :false  %>
<%= f.label :is_active_false, "販売停止中" %>

<%=f.submit "変更を保存" %>
<% end %>