<div class="container">
    <div class="row">
        <div class="col-4 my-4">
            <h5 class="d-inline-flex text-align-center m-6 border-bottom">商品詳細</h5>
    
            <div class="mt-4"><%= image_tag @item.get_item_image(300,300) %></div>
        </div> 
        <div class="col-6 mt-5">
            <table class ="table table-borderless text-center">
                <tr>
                    <td>商品名</td>
                    <td><%= @item.name %></td>
                </tr>
                <tr>
                    <td>商品説明</td>
                    <td><%= @item.introduction %></td>
                </tr>
                <tr>
                    <td>ジャンル</td>
                    <td><%= @item.genre.name %></td>
                </tr>
                <tr>
                    <td>税込価格<br>（税抜き価格）</td>
                    <td class=" align-middle">
                        <% tax_price=@item.price*1.1 %> 
                        <%= tax_price.floor.to_s(:delimited)  %>（<%= @item.price.to_s(:delimited) %>）円
                    </td>
                </tr>
                <tr>
                    <td>販売ステータス</td>
                    <td><% if @item.is_active %>
                            <b class = "text-success fw-bold">販売中</b> 
                        <% else %>
                           <b class = "text-black-50 fw-bold">販売停止中</b>
                        <% end %>
                    </td>
                </tr>
            </table>
            <div class="row justify-content-center">
                <div class="col-5"><%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %></div>
            </div>    
        </div>
    </div>
</div>
    
