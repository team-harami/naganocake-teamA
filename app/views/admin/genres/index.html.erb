<div class="container">
    <div class="row" >
        <h5 class="d-inline-flex m-4 border-bottom">ジャンル一覧・追加</h5>
    </div> 
    
        
        <%= form_with model: @genre, url: admin_genres_path do |f| %>
            <div class ="row d-flex align-items-center mt-3 mb-5">
                <div class="col-2">ジャンル名</div>
                <div class ="col-3"> <%= f.text_field :name ,placeholder: "ジャンル名"%></div>
                <div class ="col-3 ml-2"> <%= f.submit "新規登録", class: 'btn btn-success' %></div>
            </div>
        <% end %>
    
<table class ="table table-striped col-3">
    <thead class= "mt-4 ">
        <h7>ジャンル一覧</h7>
    </thead>
    <tbody class="table-light text-center">
        <% @genres.each do |genre| %>
            <tr>
                <td class ="align-middle"><%= genre.name %></td>
                <td><%= link_to "編集", edit_admin_genre_path(genre.id) ,class: "btn btn-success" %></td>
            </tr>
        <% end %>
    </tbody>
</table>
