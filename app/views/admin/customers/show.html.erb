<div class="form-row">
<h5 class="form-group col-3 pl-5">
  <%= @customer.last_name+@customer.first_name %>さんの会員詳細
</h5>
</div>

<div class="form-row">
      <div class="form-group col-2 pl-5">会員ID</div>
      <div class="form-group col-1">
        <%=@customer.id %>
     </div>
</div>

 <div class="form-row">
     <div class="form-group col-2 pl-5">氏名</div>
      <div class="form-group col-1">
        <%=@customer.last_name+@customer.first_name %>
      </div>
    </div>

  <div class="form-row">
      <div class="form-group col-2 pl-5">フリガナ</div>
      <div class="form-group col-1">
        <%=@customer.last_name_kana+@customer.first_name_kana %>
      </div>
    </div>

   <div class="form-row">
      <div class="form-group col-2 pl-5">郵便番号</div>
      <div class="form-group col-1">
        <%=@customer.postal_code %>
     </div>
    </div>

    <div class="form-row">
      <div class="form-group col-2 pl-5">住所</div>
     <div class="form-group col-1">
        <%=@customer.address %>
     </div>
    </div>

    <div class="form-row">
      <div class="form-group col-2 pl-5">電話番号</div>
      <div class="form-group col-1">
        <%=@customer.telephone_number %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-2 pl-5">メールアドレス</div>
      <div class="form-group col-1">
         <%= @customer.email %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-2 pl-5">会員ステータス</div>
      <div class="form-group col-1">
       <%= @customer.is_active ? "有効" : "退会" %>
      </div>
    </div>

<div class="form-row">
  <div class="form-group col-2"></div>
  <div class="form-group col-1">
<%= link_to edit_admin_customer_path(@customer), class: "btn btn-success" do %>
  編集する
<% end %>
</div>
<div class="form-group col-2">
<%= link_to root_path, class: "btn btn-primary" do %>
  注文履歴一覧を見る
<% end %>
</div>
</div>










