
<h4>ショッピングカート</h4>

<%= button_to "カートを空にする", destroy_cart_path, method: :destroy, class: "btn btn-danger", data: { confirm: "本当に空にしますか？" } %>

<table>
<thead>
    <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
    </tr>
</thead>
<tbody>
    
<% @cart_items.each do |cart_item| %>
    <tr>
        <td>
            <%=image_tag cart_item.item.get_image(100,100) %>
            <%= cart_item.item.name %>
        </td>
        <td>
            <% tax_price = cart_item.item.price*1.1 %>
            <%= tax_price.round.to_s(:delimited) %>円
        </td>
        <td>
            <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
                <%#= f.hidden_field :customer_id, value: current_customer.id %>
                <%= f.hidden_field :item_id, value:  cart_item.item.id %>
                <%= f.select :amount, *[1..30] %>
                <%= f.submit "変更" %>
             <% end %>
        </td>
        <td>
            <% total_price = tax_price*cart_item.amount %>
            <%= total_price.round.to_s(:delimited) %>
        </td>
        <td><%= button_to "削除", cart_item_path(cart_item), method: :delete, class: "btn btn-danger", data: { confirm: "本当に空にしますか？" }  %></td>
    </tr>
<% end %>
</tbody>
</table>

