<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="container">
        <div class="row align-items-center">
          <div class="col-3 display-5">
              <%=link_to root_path do %>
              <%= image_tag 'logo.png', size: '100x100' %>
              ながのcake
              <% end %>
          </div>
            <% if customer_signed_in? %>
              <div class="col-4">ようこそ<%= current_customer.last_name %>さん！</div>
              <div class="col-5">
              <%#= link_to 'マイページ', #'customers/my_page' #後でmypage_pathへ変更%>
              <%= link_to '商品一覧', items_path , class:'btn'%>
              <%= link_to 'カート', cart_items_path, class:'btn' %>
              <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class:"btn" %>
              </div>
      
            <% else %>
            <div class="col-4"></div>
              <div class="col-5 justify-content-end ">
                  <button class ="btn boder"><%= link_to 'About', about_path , class:'btn'%></button>
                  <button class ="btn"><%= link_to '商品一覧', items_path , class:'btn'%></button>
                  <button class ="btn"><%= link_to '新規登録', new_customer_registration_path, class:'btn' %></button>
                  <button class ="btn"><%= link_to 'ログイン', new_customer_session_path , class:'btn'%></button>
            </div>
            <% end %>
              
              <div class="col-md-3 offset-md-8">
                <%= form_with url: search_items_path, method: :get do |f| %>
                  <%= f.text_field :word %>
                <% end %>
              </div>
           
              </div>
        </div>
           
          
      </div>
    </header>
    <%= yield %>
  </body>
</html>
